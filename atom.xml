---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
  <title>{{ site.name }}</title>
  <link href="http://shortpgh.com/"/>
  <link type="application/atom+xml" rel="self" href="http://shortpgh.com/atom.xml"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://shortpgh.com/</id>
  <author>
    <name>Nik Mihalick</name>
    <email>nik@shortpgh.com</email>
  </author>

  {% for post in site.posts liit:10 %}
  <entry>
    <id>http://shortpgh.com{{ post.url }}</id>
    <link type="text/html" rel="alternate" href="http://shortpgh.com{{ post.url }}"/>
    <title>{{ post.title }}</title>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <author>
      <name>Nik Mihalick</name>
      <uri>http://shortpgh.com/</uri>
    </author>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
 
</feed>
